                      p en van 
                      input(type='time' id='th-start-pm' name='th-start-pm')
                      p tot 
                      input(type='time' id='th-end-pm' name='th-end-pm')
                  .day
                      input(type='time' id='fr-start-am' name='fr-start-am')
                      p tot 
                      input(type='time' id='fr-end-am' name='fr-end-am')
                      p en van 
                      input(type='time' id='fr-start-pm' name='fr-start-pm')
                      p tot 
                      input(type='time' id='fr-end-pm' name='fr-end-pm')
                  .day
                      input(type='time' id='sa-start-am' name='sa-start-am')
                      p tot 
